// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model stores {
  shop     String   @id
  isActive Boolean? @default(false)

  @@index([shop])
}

model session {
  id      String  @id
  content String? @db.Text
  shop    String?

  @@index([id])
  @@index([shop])
}

model addons {
  id     String @id
  addons Json[]
  shop   String

  @@unique([id, shop])
}

enum relAddons {
  id
  name
  price
  notes
}
